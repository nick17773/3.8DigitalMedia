<Window x:Class="_3._8DigitalMedia.ThemeSetter"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_3._8DigitalMedia"
        mc:Ignorable="d"
        Background="{DynamicResource MainBackgroundBrush1}"
        Title="ThemeSetter" Height="450" Width="800">
        
    
    <Grid x:Name="MainGrid">
        <ComboBox x:Name="ColourSelector" HorizontalAlignment="Left" Margin="460,218,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="ComboBox_SelectionChanged">
            <ComboBoxItem x:Name="Default" Content="Default Theme" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem x:Name="Yellow" Content="Yellow" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem x:Name="Brown" Content="Slayer" HorizontalAlignment="Left" Width="118"/>
        </ComboBox>

    </Grid>
</Window>
