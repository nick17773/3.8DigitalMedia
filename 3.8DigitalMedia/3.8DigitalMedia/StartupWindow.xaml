<Window x:Class="_3._8DigitalMedia.StartupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_3._8DigitalMedia"
        mc:Ignorable="d"
        Title="StartupWindow" Width="800" Height="600" WindowStartupLocation="CenterScreen">
    <Grid>
        <GroupBox Header="Welcome!" Margin="10">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Button Content="Button" FontSize="30" FontWeight="Normal" Click="Button_Click" Grid.Row="1" Margin="280,150,280,10"/>
            </Grid>
        </GroupBox>

    </Grid>
</Window>
