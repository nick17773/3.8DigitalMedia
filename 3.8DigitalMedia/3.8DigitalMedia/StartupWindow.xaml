<Window x:Class="_3._8DigitalMedia.StartupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_3._8DigitalMedia"
        mc:Ignorable="d"
        Title="StartupWindow" Width="800" Height="600" WindowStartupLocation="CenterScreen">
    <Grid x:Name="MainGrid">
        <GroupBox Header="Welcome!" Margin="10">
            <Grid Margin="10" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="8*"/>
                    <RowDefinition Height="2*"/>
                </Grid.RowDefinitions>
                <Button Content="Continue" FontSize="30" FontWeight="Normal" Click="Button_Click" Grid.Row="1" Grid.Column="1" Margin="10"/>
                <TextBlock Margin="10" TextWrapping="Wrap" Grid.ColumnSpan="3" FontSize="16" FontWeight="{DynamicResource {x:Static SystemFonts.MenuFontWeightKey}}"><Run FontSize="18" Text="This is a Genre Calculator for the various Metal Subgenres, featuring a Basic and Advanced algorithm, Spotify playlists and Genre Information from Wikipedia."/><LineBreak/><Run FontSize="18"/><LineBreak/><Run FontSize="18" Text="None of the music featured in this app is mine, and all rights still remain with the original producers and artists."/><LineBreak/><LineBreak/><Run FontWeight="Bold" FontSize="36" Text="WARNING: "/><LineBreak/><Run/><LineBreak/><Run FontSize="18" Text="Due to the nature of some of the subgenres featured in this calculator, some content may not be suitable for all ages or audiences. Content may range from graphic and vulgar imagery to bigoted and racist statements. Viewer discretion is advised."/><Run FontSize="18" Text=" I do not claim responsibility for any faces melted during the use of this app. "/></TextBlock>

            </Grid>
        </GroupBox>

    </Grid>
</Window>
